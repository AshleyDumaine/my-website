description "Gunicorn application server running my website"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid user
setgid www-data

env PATH=/home/pi/my-website-venv/bin
chdir /home/pi/my-website/my-website
exec /home/pi/my-website-venv/bin/gunicorn -w 1 --forwarded-allow-ips="*" website:app
